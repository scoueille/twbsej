{
  "name": "twbsej",
  "description": "Include Bootstrap's source Sass and compiled JavaScript bundle via npm for EJ.",
  "version": "1.0.0",
  "private": true,
  "repository": "scoueille/twbsej",
  "license": "MIT",
  "stackblitz": {
    "startCommand": "npm start"
  },
  "scripts": {
    "build": "npm run css",
    "css-compile": "sass --style compressed --source-map --embed-sources --no-error-css --load-path=node_modules scss/:css/",
    "css-compile-dev": "sass --source-map --embed-sources --no-error-css --load-path=node_modules scss/:css-src/",
    "css-lint": "stylelint scss/",
    "css-prefix": "postcss --replace css*/bootstrap-ej.css",
    "css": "npm-run-all css-compile css-compile-dev css-prefix",
    "server": "sirv --dev --no-clear --port 3000",
    "start": "npm-run-all --parallel watch server",
    "watch": "nodemon -e html,scss -x \"npm run css\"",
    "test": "npm-run-all css-lint css"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.3"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "nodemon": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.33",
    "postcss-cli": "^11.0.0",
    "postcss-combine-duplicated-selectors": "^10.0.3",
    "postcss-load-config": "^5.1.0",
    "sass": "^1.69.6",
    "sirv-cli": "^2.0.2",
    "stylelint": "^16.1.0",
    "stylelint-config-twbs-bootstrap": "^13.0.0"
  },
  "postcss": {
    "map": true,
    "plugins": {
      "autoprefixer": {},
      "postcss-combine-duplicated-selectors": {
        "removeDuplicatedProperties": true
      }
    }
  }
}
